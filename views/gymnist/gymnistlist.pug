extends ../layout2.pug

block content
  div.container.col-md-9
    h1
      a(href='/') Gymnists
    if message
      p= message
    table.table
      tr
        td Name
        td Account No.
        td No. Classes
        td Age
        td Enrollment Date
        td Notes
        td
        if isAdmin
          td
      each gymnist in gymnists
        tr
          td
            a(href='/class/profile/' + gymnist.id) #{gymist.fname + gymnist.lname}
          td
            a(href='#' + gymnist.account_id) #{gymnist.account_id}
          td
            a(href='#' + gymnist.id) #{gymnist.classes.length}
          td
            a(href='#' + gymnist.id) #{gymnist.dob}
          td
            a(href='#' + gymnist.id) #{gymnist.enrollment_date}
          td
            a(href='#' + gymnist.id) #{gymnist.notes}
          td
            a(href='/gymnist/update/' + gymnist.id) Edit
          if isAdmin
            td
              a(href='/gymnist/delete/' + gymnist.id) Remove

    p
     a.btn.btn-primary(href='/gymnist/create') Add New Gymnist
