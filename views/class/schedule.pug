      div.dhx_cal_next_button
      div.dhx_cal_today_button
      div.dhx_cal_date
      div.dhx_cal_tab(name="day_tab" style="right: 204px")
      div.dhx_cal_tab(name="week_tab" style="right: 140px")
      div.dhx_cal_tab(name="month_tab" style="right: 76px")

    div.dhx_cal_header
    div.dhx_cal_data


  script.
    var classObj = JSON.parse('!{JSON.stringify(classes)}');
    var scheduleObj = JSON.parse('!{JSON.stringify(schedule)}');
    calInit(classObj, scheduleObj);

