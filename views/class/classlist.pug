extends ../layout2.pug

block content
  div.container.col-md-9
    h1
      a(href='/') Classes
    if message
      p= message
    table.table
      tr
        td Class Name
        td Instructor
        td Class Size
        td Class Limit
        td Sessions
        td Cost
        td Pending
        td
        td
        if isAdmin
          td
      each gclass in classes
        tr
          td
            a(href='/class/profile/' + gclass.id) #{gclass.title}
          td
            a(href='#' + gclass.id) #{gclass.instructor}
          td
            a(href='#' + gclass.id) #{gclass.roster.length}
          td
            a(href='#' + gclass.id) #{gclass.class_limit}
          td
            a(href='#' + gclass.id) #{gclass.session_count}
          td
            a(href='#' + gclass.id) #{gclass.cost}
          td
            a(href='#' + gclass.id) #{gclass.isPending ? 'Y' : 'N'}
          td
            a(href='#' + gclass.id) Add/Remove Gymnist 
          td
            a(href='/class/update/' + gclass.id) Edit
          if isAdmin
            td
              a(href='/class/delete/' + gclass.id) Remove

    p
     a.btn.btn-primary(href='/class/create') Add New Class
