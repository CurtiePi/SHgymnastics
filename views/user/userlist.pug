extends ../layout2.pug

block content
  div.container.col-sm-7
    h1
      a(href='/') Users
    if message
      p= message
    table.table
      tr
        td Name
        td Email
        td(onclick='unfilterTable();') Role 
        td
        if isAdmin
          td
      each user in users
        tr
          td(class="name")
            a(href='/user/profile/' + user.id) #{user.name}
          td(class="email")
            a(href='#' + user.id) #{user.email}
          td(class="role" onclick="filterTable(this);")
            a(href='#' + user.id) #{user.role}
          td
            a(href='/user/update/' + user.id) Edit
          if isAdmin
            td
              a(href='/user/delete/' + user.id) Remove

    p
     a.btn.btn-primary(href='/user/create') Add New User
